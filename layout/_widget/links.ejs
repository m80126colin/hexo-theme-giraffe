<% if (theme.links.length) { %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%- __('links') %></h3>
    <div class="widget">
      <% for (var i in theme.links) { %>
      <p><a href="<%= theme.links[i].site %>"<% if (theme.links[i].intro) { %> title="<%= theme.links[i].intro %>"<% } %>><%- theme.links[i].name %></a></p>
      <% } %>
    </div>
  </div>
<% } %>